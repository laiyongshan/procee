<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/layout_nocard"
    >


        <TextView
            android:id="@+id/icon_nocard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲，您暂时无卡"
            android:textSize="14sp"
            android:drawableTop="@mipmap/icon_nocard"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_nocard"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/textselector"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="+ 添加银行卡"
        android:textSize="@dimen/text_size24"
        />

</RelativeLayout>