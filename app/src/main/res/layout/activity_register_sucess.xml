<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/item_title1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:weightSum="2">


        <com.flyco.roundview.RoundTextView
            android:id="@+id/navigat_main_rtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="进入首页"
            android:textColor="#909090"
            android:textSize="@dimen/text_size18"
            rv:rv_backgroundColor="@color/lucency"
            rv:rv_backgroundPressColor="@color/colorPrimary"
            rv:rv_cornerRadius="5dp"
            rv:rv_strokeColor="@color/colorPrimary"
            rv:rv_strokePressColor="#6D8FB0"
            rv:rv_strokeWidth="1dp" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/navigat_additional_rtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="补充资料"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size18"
            rv:rv_backgroundColor="@color/colorPrimary"
            rv:rv_backgroundPressColor="@color/lucency"
            rv:rv_cornerRadius="5dp" />


    </LinearLayout>


</LinearLayout>
