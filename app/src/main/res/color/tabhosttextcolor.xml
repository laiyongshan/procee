<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时字体颜色 -->
    <item android:color="@color/white" android:state_selected="false" />
    <!--选中时的字体颜色  -->
    <item android:color="#F5EEAE" android:state_selected="true" />
    <!-- 非触摸模式下获得焦点并单击时的字体颜色 -->
    <item android:color="#F5EEAE" android:state_focused="true" android:state_pressed="true" />
</selector>
