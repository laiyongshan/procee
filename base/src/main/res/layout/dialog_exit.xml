<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/dialog_default_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tltle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/large_container_padding"
        android:text="确定退出?"
        android:layout_margin="@dimen/common_container_padding"
        android:layout_marginBottom="@dimen/large_container_padding"
        android:textSize="@dimen/text_medium_size"
        android:textColor="#4e4e4e"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_height="50dp"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#28282a"
            android:background="@drawable/dialog_bottom_left_btn"
            />

        <Button
            android:id="@+id/commit_btn"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#28282a"
            android:background="@drawable/dialog_bottom_right_btn"
            />

    </LinearLayout>

</LinearLayout>
